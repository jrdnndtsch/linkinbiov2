<div class="bg-dark full-page--center-content">
    <div class="modal-large">
        <h2><%= t('choose_gram')%></h2>
        <div class="gram-grid">
            <% @user_grams.each do |gram|%>
                <div>
                    <%= link_to edit_gram_path(gram) do %>
                        <img src="<%= gram.image_url%>" alt="">
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= link_to 'Back', grams_path %>
